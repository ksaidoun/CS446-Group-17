<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.schedule.ScheduleFragment">

    <TextView
        android:id="@+id/text_schedule"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/textSunday"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@id/textMonday"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_schedule"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/textMonday"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@id/textTuesday"
        app:layout_constraintStart_toEndOf="@id/textSunday"
        app:layout_constraintTop_toBottomOf="@id/text_schedule"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/textTuesday"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@id/textWednesday"
        app:layout_constraintStart_toEndOf="@id/textMonday"
        app:layout_constraintTop_toBottomOf="@id/text_schedule"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/textWednesday"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@id/textThursday"
        app:layout_constraintStart_toEndOf="@id/textTuesday"
        app:layout_constraintTop_toBottomOf="@id/text_schedule"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/textThursday"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@id/textFriday"
        app:layout_constraintStart_toEndOf="@id/textWednesday"
        app:layout_constraintTop_toBottomOf="@id/text_schedule"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/textFriday"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@id/textSaturday"
        app:layout_constraintStart_toEndOf="@id/textThursday"
        app:layout_constraintTop_toBottomOf="@id/text_schedule"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/textSaturday"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/textFriday"
        app:layout_constraintTop_toBottomOf="@id/text_schedule"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/btnPreviousWeek"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/previous_week_button_text"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/text_schedule" />

    <Button
        android:id="@+id/btnNextWeek"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/next_week_button_text"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/text_schedule" />

</androidx.constraintlayout.widget.ConstraintLayout>
